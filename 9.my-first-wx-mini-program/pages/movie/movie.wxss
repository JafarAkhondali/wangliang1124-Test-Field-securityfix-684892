/* pages/movie/movie.wxss */

.search-wrapper {
  display: flex;
  align-items: center;
  height: 80rpx;
  background: #f2f2f2;
}

.search-icon {
  flex: 0 0 36rpx;
  margin-left: 24rpx;
  vertical-align: middle;
}

.search-wrapper input {
  flex: 1;
}
.search-wrapper .close{
  flex: 0 0 32rpx;
  margin-right: 24rpx;
  width: 32rpx;
  height: 32rpx;
}
.placeholder {
  margin-left: 24rpx;
  font-size: 12px;
  font-weight: 700;
  color: #d1d1d1;
}

.showing {
  margin: 24rpx;
}

.coming-soon {
  margin: 24rpx;
}
.title {
  font-size: 12px;
}

.more {
  position:relative;
  float: right;
  font-size: 12px;
  top: 12rpx;
  color: #d1d1d1;
}

.search-panel{
  position: fixed;
  top: 80rpx;
  padding: 24rpx;
  width: 100%;
  height: 100%;
  /*background-color: #ccc*/
}