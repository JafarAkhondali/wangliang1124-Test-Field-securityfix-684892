.post-item{
  padding: 10rpx 0; 
  margin-bottom: 36rpx;
  border-top: 1px solid rgba(7,17,27,0.1);
  border-bottom: 1px solid rgba(7,17,27,0.1);
  /* background: #ccc; */
}
 .post-item .avatar{
  margin-left: 24rpx;
  vertical-align: middle;
  width: 64rpx;
  height: 64rpx;
}
.post-item .date{
  margin-left: 12rpx; 
  vertical-align: middle;  
  font-size: 24rpx;
  color: rgb(147,153,159);
}
.post-item .title{
  padding: 0 24rpx;
  margin: 24rpx 0;
  line-height: 2;
  font-size: 14px;
  font-weight: 700;
} 
.post-item image{
  width: 100%;
}
.post-item .content{
  margin: 24rpx;
  font-size: 12px;
  color:rgb(77, 85, 93);
  letter-spacing:4rpx;
}
.post-item .like{
  padding: 0 24rpx;
}
.post-item .icon{
  margin-right: 12rpx;
  width: 16px;
  height: 16px;
  vertical-align: middle;
}
.post-item .icon-text{
  margin-right: 24rpx;
  vertical-align: middle;
  font-size: 12px;
  color: rgb(147,153,159);
}